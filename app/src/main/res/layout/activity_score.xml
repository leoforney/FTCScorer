<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.leoforney.ftcscorer.ScoreActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:text="Autonomous"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="15dp"
                android:text="Beacon hit" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not hit"
                    android:id="@+id/beacon_not_hit"
                    android:padding="15dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First time"
                    android:id="@+id/beacon_hit_first"
                    android:padding="15dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second time"
                    android:id="@+id/beacon_hit_second"
                    android:padding="15dp"/>

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="15dp"
                android:text="Parking" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On floor"
                    android:padding="15dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Half on mountain"
                    android:padding="15dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:padding="15dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Middle"
                    android:padding="15dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:padding="15dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/climbers_1"
                    android:text="Climbers in shelter"/>

            </RadioGroup>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:text="Teleop"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/climbers_2"
                android:text="Climbers in shelter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="15dp"
                android:text="Debris"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="Floor goal"
                            android:textSize="15sp"
                            android:textColor="#000"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLength="2"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="Low zone"
                            android:textSize="15sp"
                            android:textColor="#000"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLength="2"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="Middle zone"
                            android:textSize="15sp"
                            android:textColor="#000"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLength="2"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="High"
                            android:textSize="15sp"
                            android:textColor="#000"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLength="2"
                            android:text="0" />
                    </LinearLayout>

                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="15dp"
                android:text="Climbers knocked"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="1"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="2"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="3"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="15dp"
                android:text="Parking"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:padding="15dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Middle"
                    android:padding="15dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:padding="15dp"/>
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:text="End game"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Hang on bar"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="All clear signal"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#616161"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/totalScore"
                    android:layout_centerHorizontal="true"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="0"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/updateScore"
                    android:text="Update Score"
                    android:layout_below="@id/totalScore"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
